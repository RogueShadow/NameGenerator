<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainWindow" stylesheets="@caspian.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.granseal.namegenerator.controllers.MainWindowController">
   <children>
      <VBox>
         <children>
            <TextField fx:id="name" alignment="CENTER" editable="false" prefWidth="700.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#openNamesEditor" text="Data Editor" />
                  <ChoiceBox fx:id="worldChooser" />
                  <ChoiceBox fx:id="gender" />
                  <Button mnemonicParsing="false" onAction="#generateName" text="Generate" />
                  <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeWindow" text="Close" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
